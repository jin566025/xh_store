.clear{
    clear: both
}
.header{
    width: 96%;padding: 40rpx 0;padding-left:4%;font-size: 30rpx;background-color: #F5F5F5;color: #434343
}

.content-section input{
    width: 96%;padding:30rpx 0;font-size: 30rpx;border-bottom: 1px solid gainsboro;padding-left: 4%;
}
.section picker {
    width:96%;padding: 30rpx 0;font-size: 30rpx;color: #808080;padding-left: 4%;border-bottom: 1px solid gainsboro
}

.isdefault-left{
    width: 60%;float: left;text-align: left;font-size: 30rpx;
}
.isdefault-right{
    width:40%;float: right;text-align: right
}
.isdefault{
    width: 92%;margin-left:4%;padding: 30rpx 0  
}
.seat{
    height: 100rpx;width: 100%
}
.footer{
    position: fixed;bottom: 0;width: 100%
}
.footer-left,.footer-right{
    float: left;width: 50%;height: 100rpx;line-height: 100rpx;color: #ffffff;font-size: 30rpx;text-align: center
}
.footer-left{
    background-color: #333333
}
.footer-right{
    background-color: #F76260
}


/*mask*/  
.toast_mask {  
 
  width: 100%;  
  height: 100%;  
  overflow: hidden;  
  position: fixed;  
  top: 0;  
  left: 0;  
  z-index: 888;  
  background-color: rgba(0, 0, 0, 0.5)
}  
/*toast*/  
.toast_content_box {  
  display: flex;  
  width: 100%;  
  height: 100%;  
  justify-content: center;  
  align-items: center;  
  position: fixed;  
  z-index: 999;  
    top: 0
}  
.toast_content {  
  width: 50%;  
  padding: 40rpx;  
  background: rgba(0, 0, 0, 0.5);  
  border-radius: 40rpx;  
  color: #ffffff
}  
.toast_content_text {  
  height: 100%;  
  width: 100%;  
  color: #fff;  
  font-size: 28rpx;  
  text-align: center;  

}  