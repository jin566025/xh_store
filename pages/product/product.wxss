/*加入购物车弹出层*/
.addcar{
    height: 100%;width: 94%;margin: 0 3%;margin-bottom: 20rpx;position: relative
}
.addcar-left{
    width: 30%;float: left;height: 100%;border-radius: 5px;background-color: #EEEFF1
}
.addcar-right{
    width:67%;float: right;height: 100%;
}
.addcar-left image{
    width: 100%
}
.close{
    position: absolute;right: 0;top: 0;width: 30rpx
}
.addcar-name{
    font-size: 35rpx;font-weight: bold;margin-top: 10rpx
}
.addcar-desc{
    color: #A2A2A2;white-space:nowrap;overflow: hidden;text-overflow:ellipsis;width: 90%;font-size: 25rpx;padding: 30rpx 0
}
.addcar-price{
    float: left;text-align: left;width: 50%
}
.addcar-num{
    float: left;text-align: right;width: 50%;font-size: 25rpx;vertical-align: middle
}

.addcar-num text,.addcar-price text{
    display: inline-block;vertical-align: middle
}
.addcar-price-view{
    font-size: 25rpx;display: inline-block;padding: 8rpx 15rpx;background-color: #F76260;color: #ffffff;border-radius: 5px;vertical-align: middle
}
.addcar-num{
    padding: 8rpx 0
}
.all-num{
    height: 100rpx;line-height:100rpx;width: 94%;margin: 0 3%;color: #9B9B9B
}
.all-num-left{
    width: 30%;float: left;text-align: left;height: 100%;font-size: 30rpx
}
.all-num-right{
    width: 70%;float: left;text-align: right;height: 100%;
}

.num-cal{
    display: inline-block;width: 50rpx;height: 50rpx;text-align: center;line-height: 45rpx;background-color: #E9E9E9;border-radius: 5px;vertical-align: middle
}
.num-cal-mid{
    width: 100rpx;margin: 0 10rpx;font-size: 20rpx;color: #000000;
}
.num-zanwei{
    width: 94%;margin: 0 3%;padding: 30rpx 0
}
.address-img{
    width: 30rpx;vertical-align: top;float: left;margin-right: 30rpx;
}
.address-detail{
    width: 80%;font-size: 25rpx;float: left
}
.address-detail2{
    color: #F4A118;margin-top: 10rpx
}
.addcar-footer{
    height:100rpx;line-height:100rpx
}
.addcar-footer-left{
    width: 58%;float: left;border-top: 1px solid gainsboro;border-bottom: 1px solid gainsboro;height:98rpx;line-height: 98rpx;font-size: 25rpx;padding-left: 2%
}
.addcar-footer-right{
    width: 40%;float: left;border-top: 1px solid #F76260;border-bottom: 1px solid #F76260;color: #ffffff;background-color: #F76260;text-align: center;height:98rpx ;line-height: 98rpx;vertical-align:middle;font-size: 25rpx
}
.addcar-footer-left-l,.addcar-footer-left-r{
    display: inline-block
}
.addcar-footer-left-r{
    color: #F76260;font-size: 30rpx
}
.detail .price{
    font-size: 25rpx
}
.detail .price2{
    font-size: 20rpx;color: #A1A1A1;text-decoration: line-through
}
.color{
    position: fixed;top: 30rpx;right: 30rpx;width: 100rpx;text-align: center;z-index: 888
}
.color image{
    width: 60rpx;z-index: 888
}
.color-select{
    position: fixed;top: 50%;transform: translateY(-50%);width: 80%;padding: 50rpx 0;background-color: #ffffff;z-index: 998;margin-left: 10%;border-radius: 5px
}
.color-shadow{
    height: 100%;width: 100%;position: fixed;top: 0;right: 0;z-index: 997;background-color: rgba(64,64,64,0.8);
}
.colors{
    padding: 15rpx 20rpx;border: 1px solid #A1A1A1;display: inline-block;font-size: 20rpx;text-align: center;margin: 0 30rpx;border-radius: 5px;color: #A1A1A1;background-color: #A1A1A1;color: #ffffff
}