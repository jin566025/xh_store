.clear{
    clear: both
}
.hr{
    width: 100%;height: 1px;background-color: gainsboro
}
page {
  display: flex;
  flex-direction: column;
  height: 100%;
}
/* 直接设置swiper属性 */
swiper {
  height: 800rpx;
}
swiper-item image {
  width: 100%;
  height: 100%;
}
.detail {

  margin-top: 15rpx;
  margin-bottom: 0rpx;text-align: center;padding: 30rpx 0
}
.detail .title {
  font-size: 35rpx;
  margin: 10rpx auto;
  color: black;

}
.detail .title2 {
  font-size: 25rpx;
  margin: 10rpx auto;
  color: #A1A1A1;
  padding-bottom: 30rpx
}
.detail .price {
  color: red;
  font-size: 40rpx;
  margin: 10rpx;
}
.line_flag {
  width: 80rpx;
  height: 1rpx;
  display: inline-block;
  margin: 20rpx auto;
  background-color: gainsboro;
  text-align: center;
}
.line {
  width: 100%;
  height: 2rpx;
  display: inline-block;
  margin: 20rpx 0rpx;
  background-color: gainsboro;
  text-align: center;
}
.detail-nav {
  display: flex;
  flex-direction: row;
  align-items: center;
  float: left;
  background-color: #fff;
  position: fixed;
  bottom: 0;
  right: 0;
  z-index: 1;
  width: 100%;
  height: 100rpx;
  border-top: 1px solid gainsboro
}
.button-black {
  background-color: #444444;border-top: 1px solid #444444
}
.button-white {
  background-color: #ffffff;
}

.button-red {
  background-color:#F76260; border-top: 1px solid #F76260
}
.image_detail {
  width: 100%;
}
button {
  color: white;
  text-align: center;
  text-decoration: none;
  display: inline-block;
  font-size: 30rpx;
  border-radius: 0rpx;
  width:30%;
  height: 100%;
  line-height: 100rpx;
  padding:0 
}
.detail-nav image {
  width:50rpx;


}
.line_nav {
  width: 5rpx;
  height: 100%;
  background-color: gainsboro;
}
.button-white image{
    width: 25%
}
.nav-btn{
    width: 33.3%;text-align: center
}
/* 占位 */
.temp {
  padding: 30rpx 0;width: 100%
}
.detail text {
  display: block;
  font-size: 30rpx;
  padding-left: 2%;
}
.text-remark {
  display: block;
  font-size: 25rpx;
  margin: 10rpx;
}
.product-main{
    width: 96%;margin: 0 2%;padding-top: 30rpx
}

.product-information{
    width: 98%;padding-left:2%;height: 100rpx;line-height: 100rpx;background-color: #F5F5F5
}

.product-main-center{
    text-align: center;font-size: 25rpx;padding: 10rpx 0
}

.product-main-img{
    width: 100%;margin: 20rpx 0
}
.product-groups{
    padding-top: 30rpx;margin-bottom:60rpx
}
.product-groups-main{
    margin-top: 30rpx;margin-bottom: 60rpx
}
.product-groups-main-part{
    float: left;font-size: 25rpx
}
.product-groups-main-part1{
    width: 15%;text-align: center
}
.product-groups-main-part2{
    width: 20%;text-align: left
}
.product-groups-main-part3{
    width: 65%;
}
.product-groups-main-container{
    border-bottom: 1px solid gainsboro;height: 80rpx;line-height: 80rpx;color: #676767
}

.product-groups-title{
    font-size: 30rpx;color: #404040;
}
.product-groups-title-left{
    border-left: 3px solid #80273E
}
.product-groups-name{
    font-size:24rpx;color: #737373
}

.product-groups-title-right{
    border-right:3px solid #80273E
}



