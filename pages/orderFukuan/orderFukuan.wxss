.clear{
    clear: both
}
.header{
    padding: 20rpx 0;background-color: #A3A3A3
}
.header-nav{
    width: 96%;margin: 0 2%
}
.header-navs{
    width: 20%;float: left;text-align: center;font-size: 25rpx;padding: 20rpx 0;
}
.header-navs-active{
    border-bottom: 2px solid #ffffff;color: #ffffff
}

.main{
    text-align: center;position: absolute;top: 50%;transform: translateY(-50%);margin: 0 auto;width: 100%
}
.main image{
    width: 200rpx;
}
.main .tips{
   font-size: 30rpx
}
.section{
    width: 96%;margin: 0 2%;position: relative
}
.section-left{
    display: inline-block;background-color: gainsboro;border-radius: 5px;vertical-align: middle;margin-bottom: 30rpx
}
.section-left image{
    width: 120rpx
}
.section-right{
    display: inline-block;margin-left: 30rpx;vertical-align: top;width: 50%
}

    
.price-num{
    position: absolute;top: 0;right: 0;text-align: right
}
.name{
    font-size: 30rpx;width: 100%;text-overflow: ellipsis;white-space: nowrap;overflow: hidden
}
.name2{
    font-size: 25rpx;margin-top: 30rpx
}
.price{
    font-size:30rpx;
}
.num{
    font-size: 35rpx;margin-bottom: 20rpx;color: #EB5C1C
}
.content{
    background-color: #FAFAFA;padding-top: 30rpx
}
.btn-groups{
    background-color: #ffffff;padding: 20rpx;border-top: 1px solid gainsboro;border-bottom: 1px solid gainsboro
}
.btn-cancle,.btn-sure{
    padding: 10rpx 20rpx;float: right;font-size:25rpx;border-radius: 5px;border: 1px solid gainsboro;margin-left: 30rpx
}
.btn-sure{
    border: 1px solid #EB5C1C;color: #EB5C1C
}
.tips{
    width: 100%;text-align: center;padding: 50rpx 0 30rpx 0;font-size: 30rpx
}