.main{
    overflow: hidden;width: 100%;height: 100%
}
.clear{
    clear: both
}
.header{
    width: 98%;padding-left: 2%;padding: 30rpx 0;background-color: #F5F5F5;font-size: 25rpx
}
.seat{
    height:239rpx
}
.footer{
    height: 120rpx;position: fixed;bottom: 0;width: 100%;background-color: #ffffff;z-index: 5;border-top: 1px solid gainsboro
}

.footer-nav{
    width: 33.3%;float: left;height: 100%;text-align: center
}
.footer-img{
    width: 45rpx;margin-top: 25rpx;margin-bottom: 5rpx
}
.nav-name{
    font-size: 20rpx;color: #BEBEBE
}
.nav-name-active{
    color: #000000
}

.section{
    border-bottom: 1px solid gainsboro
}

.container{
    width: 94%;margin-left:3%;padding:30rpx 0;position: relative
}
.container-left{
    width: 30%;float: left;background-color: #F5F5F5;border-radius: 5px;position: relative
}
.checks{
    position: absolute;top: 0;left: 0;width: 20%;border-radius: 5px
}
.container-right{
    width: 66%;float: right;
}
.product-img{
    width: 100%
}
.close{
    width: 35rpx;position: absolute;right: 0;top: 30rpx
}
.product-name-left,.product-name-right{
    display: inline-block
}
.product-name-left{
    font-size: 33rpx;font-weight: bold
}
.product-name-right{
    font-size: 23rpx;margin-left: 5px
}
.product-desc{
    white-space:nowrap;overflow:hidden;text-overflow: ellipsis;width: 95%;font-size: 24rpx;color: #A2A2A2;padding: 30rpx 0
}
.container-right-bottom-left{
    float: left;width: 65%;
}

.container-right-bottom-right{
    float: right;width: 35%;color: #F76260;font-size: 35rpx;vertical-align: middle;height: 50rpx;line-height: 50rpx
}

.cals{
    display: inline-block;width: 50rpx;height: 50rpx;text-align: center;vertical-align: middle;background-color: #E9E9E9;border-radius: 5px;color: #93908F;font-size: 35rpx
}
.cal-mid{
    width: 100rpx;margin: 0 15px;font-size: 25rpx;background-color: #DCDCDC;color: #000000
}
.container-right-bottom{
    margin-top: 10rpx
}


.footer-top{
    height: 120rpx;border-bottom:1px solid gainsboro;position: fixed;bottom: 120rpx;width: 100%;z-index: 5
}

.footer-top-left{
    width: 60%;float: left;height: 100%;border-top: 1px solid gainsboro;background-color: #ffffff
}
.footer-top-right{
    width: 40%;float: left;height: 100%;background-color: #F76260;color: #ffffff;border-top: 1px solid #F76260;line-height: 120rpx;text-align: center;font-size: 26rpx
}

.allcheck{
    position: absolute;height: 60rpx;top: 20rpx;left: 30rpx;width: 60rpx
}
.footer-top-left-view{
    display: inline-block;font-size: 30rpx;line-height: 120rpx
}
.footer-top-left-view1{
    margin-left: 120rpx
}
.footer-top-left-view2{
    margin-left: 40rpx
}
.footer-top-left-view3{
    color: #F76260
}


.empty{
    text-align: center;margin-top: 50rpx
}
.empty-tip{
    font-size: 30rpx;margin-top: 60rpx
}
.empty image{
    width:200rpx;margin-bottom: 30rpx
}

.goto{
    width: 240rpx;margin:0 auto;margin-top: 80rpx;
    padding: 20rpx 5rpx;border: 2px solid #FBB1B1;border-radius: 5px;font-size: 30rpx
}


.address-container{
    width: 96%;margin-left:4%
}

.address-image{
    width: 35rpx;float: left;margin-right: 30rpx
}
.address-deatil{
    width: 80%;float: left;
}
.address-deatil2{
    color: #F4A118;margin-top: 10rpx
}